@model QHub.ViewModels.NewResponseViewModel

@{
    ViewData["Title"] = "Respond";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Review</h1>
<hr />
<div class="text-black">
    @Html.DisplayFor(m => m.Question.TopicName, new {  @class = "form-control" })
</div>
<div style="min-height:100px;border:solid black 1px; padding:5px;">
    @Html.DisplayFor(m => m.Question.QuestionText)
</div>
<br />
<div>
    @Html.LabelFor(m => m.Response.ResponseText, new { @class = "control-label" })
</div>
<div style="min-height:100px;border:solid black 1px; padding:5px;">
    @Html.DisplayFor(m => m.Response.ResponseText)
</div>
<br />
<div>
    @Html.LabelFor(m => m.Question.IdealResponse, new { @class = "control-label" })
</div>
<div class="form-group" style="min-height:100px;border:solid black 1px; padding:5px;">
    @Html.DisplayFor(m => m.Question.IdealResponse)
</div>
<br />
    <a class="btn btn-primary" style="width:150px;" asp-action="Index">Close</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
