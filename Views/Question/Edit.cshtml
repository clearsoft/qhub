@model QHub.Models.Question

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Question</h1>
<hr />
<div class="row col-md-7">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <table class="table">
            <tr>
                <div class="form-group">
                    <label asp-for="TopicName" class="control-label"></label>
                    <input asp-for="TopicName" class="form-control" />
                    <span asp-validation-for="TopicName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuestionText" class="control-label"></label>
                    @Html.TextAreaFor(m => m.QuestionText,10,120, new { @class="form-control", style="width:100%;min-height:150px;" })
                    <span asp-validation-for="QuestionText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdealResponse" class="control-label"></label>
                    @Html.TextAreaFor(m => m.IdealResponse,10,120, new { @class="form-control", style="width:100%;min-height:150px;" })
                    <span asp-validation-for="IdealResponse" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OpenDate" class="control-label"></label>
                    <input asp-for="OpenDate" class="form-control" type="date" style="width:215px;" />
                    <span asp-validation-for="OpenDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CloseDate" class="control-label"></label>
                    <input asp-for="CloseDate" class="form-control" type="date" style="width:215px;" />
                    <span asp-validation-for="CloseDate" class="text-danger"></span>
                </div>
            </tr>
        </table>
        <div>
            <input type="submit" style="width:150px;" value="Save" class="btn btn-success" />
            <a asp-action="Index" style="width:150px;" class="btn btn-primary">Back</a>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
