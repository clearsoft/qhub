@model QHub.ViewModels.NewResponseViewModel

@{
    ViewData["Title"] = "Respond";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Your response</h1>

<h4>Question</h4>
<hr />
<form asp-action="Respond">
    <div class="text-black">
        @Html.DisplayFor(m => m.Question.TopicName, new {  @class = "form-control" })
    </div>
    <div class="form-group" style="min-height:100px;border:solid black 1px; padding:5px;">
        @Html.DisplayFor(m => m.Question.QuestionText)
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.Response.ResponseText, new { @class = "control-label" })
        @Html.TextAreaFor(m => m.Response.ResponseText, new { @class = "form-control", style = "height:150px;" } )
        @Html.ValidationMessageFor(m => m.Response.ResponseText, "", new { @class="text-danger"})

    </div>
    <br />
    <div class="form-group">
        <input style="width:150px;" type="submit" value="Save" class="btn btn-success" />
        <a class="btn btn-primary" style="width:150px;" asp-action="Index">Cancel</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
