@model QHub.Models.Subject

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    Delete Subject
</h1>
<hr />
<p class="text-warning">Are you sure you want to delete this subject?</p>
<div class="col-md-4">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <h5><label asp-for="Name" class="control-label"></label></h5>
            <input readonly asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <br/>
        <div class="form-group">
            <input style="width:150px;" type="submit" value="Delete" class="btn btn-danger" />

            <a style="width:150px;" asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </form>
</div>
